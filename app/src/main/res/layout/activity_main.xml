<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user_1.sample.MainActivity"
    android:weightSum="4"
    android:orientation="vertical">



        <TextView
            android:text="Large Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_weight="2"
            android:paddingLeft="150dp"
            android:paddingTop="100dp"/>

        <Button
            android:text="Simple_list1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/main_button_simple_list1"
            android:layout_marginLeft="80dp" />

        <Button
            android:text="Simple_list2"
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:id="@+id/main_button_simple_list2"
            android:layout_marginLeft="80dp"/>

    <Button
        android:text="Simple_list3"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:id="@+id/main_button_simple_list3"
        android:layout_marginLeft="80dp"/>
</LinearLayout>


